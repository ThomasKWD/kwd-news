        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "de.kuehne-webdienste.kwd-news"
        version   = "0.1.30"
        versionCode = "1" >
    <name>KÜHNE-Webdienste</name>

    <description>
        Diese App zeigt alle wichtigen Inhalte von KÜHNE-Webdienste.de offline mit Auto-Update.
		Daten werden als Text mit Ajax übertragen, Bilder als Dateien herunzergeladen.
		Das Layout ist komplett unabhängig von der Web-Version der Inhalte.
    </description>

    <author href="http://www.kuehne-webdienste.de" email="thomas@kuehne-webdienste.de">
      	Thomas Kühne
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" />
	<gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	<gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
	<gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.8" />
	    
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
	<preference name="splash-screen-duration" value="6000"/>
	<preference name="splashscreen" value="res/sommerfeld.jpg"/>
	<preference name="AndroidPersistentFileLocation" value="Internal" />

